<?php

// Определение переменных для подключения к базе данных
$servername = "localhost";  // Адрес сервера базы данных (в данном случае localhost)
$username = "root";         // Имя пользователя для подключения к базе данных
$password = "password";     // Пароль пользователя для подключения к базе данных

// Создание соединения с базой данных
$conn = new mysqli($servername, $username, $password);

// Проверка успешности подключения
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);  // Если произошла ошибка подключения, выводится сообщение об ошибке и завершается выполнение скрипта
}

// SQL-запрос для получения версии сервера MySQL
$sql = "SELECT VERSION()";
$result = $conn->query($sql);  // Выполнение запроса и сохранение результата в переменной $result

// Проверка наличия результатов
if ($result->num_rows > 0) {
    // Вывод данных каждой строки
    while ($row = $result->fetch_assoc()) {
        print_r($row);  // Вывод содержимого строки в формате ассоциативного массива
    }
} else {
    echo "0 results";  // Если результатов нет, выводится сообщение "0 results"
}

// Закрытие соединения с базой данных
$conn->close();

?>
